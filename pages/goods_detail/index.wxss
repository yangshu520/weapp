page {
  padding-bottom: 90rpx;
}
.detail .detail-swiper swiper {
  height: 65 vw;
}
.detail .detail-swiper swiper swiper-item {
  text-align: center;
}
.detail .detail-swiper swiper swiper-item image {
  width: 60%;
}
.detail .detail-price {
  padding: 15rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--colorA);
}
.detail .detail-name-row {
  display: flex;
  border-top: 5rpx solid #dedede;
  border-bottom: 5rpx solid #dedede;
  padding: 15rpx 0;
}
.detail .detail-name-row .detail-name {
  flex: 5;
  font-size: 30rpx;
  color: #000;
  padding: 0 10rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.detail .detail-name-row .detail-collect {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  border-left: 1px solid #ccc;
}
.detail .detail-name-row .detail-collect .icon-shoucang1 {
  color: var(--colorA);
}
.detail .detail-info .info-title {
  font-size: 32rpx;
  color: var(--colorA);
  font-weight: 600;
  padding: 20rpx;
}
.detail .btm-tool {
  border-top: 2rpx solid #ccc;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
}
.detail .btm-tool .tool-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  position: relative;
}
.detail .btm-tool .tool-item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.detail .btm-tool .btn-cart {
  flex: 2;
  background-color: #ffa500;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
}
.detail .btm-tool .btn-buy {
  flex: 2;
  background-color: #eb4450;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
}
